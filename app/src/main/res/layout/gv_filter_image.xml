<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x191"

        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"

        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x70"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@mipmap/dialog_close" />
            <!--  android:src="@mipmap/fb_content_icon_quxiao"  -->
            <!--   android:src="@mipmap/delet_zhaopian_1x"   -->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x60"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/buybuybuy"
            android:drawableLeft="@mipmap/video_icon"
            android:drawablePadding="@dimen/x10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:paddingTop="@dimen/x16"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/x22"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>