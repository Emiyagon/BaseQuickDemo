<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x16"
            >

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择时间"
                android:textSize="@dimen/x36"
                android:textColor="@color/textBlack"
                />

            <TextView
                android:id="@+id/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确认"
                android:textColor="@color/actionsheet_red"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x400">

            <com.ahdz.oricalshelves.view.ioswheel.LoopView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:awv_centerTextColor="0xffff0000"
                app:awv_dividerTextColor="0xffeeeeee"
                app:awv_isLoop="false"
                app:awv_textsize="18"
                android:background="#1E90FF"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                />
            <com.ahdz.oricalshelves.view.ioswheel.LoopView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00BFFF"
                app:awv_isLoop="false"
                app:awv_textsize="16"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"
                />
            <com.ahdz.oricalshelves.view.ioswheel.LoopView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:awv_centerTextColor="0xffff0000"
                app:awv_dividerTextColor="0xffeeeeee"
                app:awv_isLoop="false"
                app:awv_textsize="18"
                android:background="#00FFFF"
                />

            <com.ahdz.oricalshelves.view.ioswheel.LoopView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:awv_centerTextColor="0xffff0000"
                app:awv_dividerTextColor="0xffeeeeee"
                app:awv_isLoop="false"
                app:awv_textsize="18"
                android:visibility="gone"
                />

            <com.ahdz.oricalshelves.view.ioswheel.LoopView
                android:id="@+id/minute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                app:awv_centerTextColor="0xffff0000"
                app:awv_dividerTextColor="0xffeeeeee"
                app:awv_isLoop="false"
                app:awv_textsize="18"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>